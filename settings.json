{
  "permissions": {
    "allow": ["*"],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(sudo:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "cat task_plan.md 2>/dev/null | head -40 || true"
          },
          {
            "type": "prompt",
            "prompt": "STOP. Before writing code:\n\n1. Did you check docs? (Context7 MCP, WebFetch, or /research)\n2. Can you cite the source?\n\nIf NO: Use mcp__context7__resolve-library-id and mcp__context7__query-docs FIRST.\n\nNO CODE WITHOUT DOCS."
          }
        ]
      },
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "scripts/speak.sh 'I need your input' &"
          },
          {
            "type": "command",
            "command": "scripts/notify.sh 'Claude needs your input' 'Claude Code' &"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "scripts/check-complete.sh 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "scripts/speak.sh 'Done' &"
          },
          {
            "type": "command",
            "command": "scripts/notify.sh 'Task complete' 'Claude Code' &"
          }
        ]
      }
    ]
  }
}
