{
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "Write",
      "Read",
      "Glob",
      "Grep",
      "Task",
      "Skill",
      "WebFetch",
      "WebSearch",
      "AskUserQuestion",
      "TodoWrite",
      "EnterPlanMode",
      "ExitPlanMode",
      "NotebookEdit",
      "KillShell",
      "TaskOutput",
      "mcp__rube__*",
      "mcp__context7__*",
      "mcp__github__*",
      "mcp__sequential-thinking__*",
      "mcp__claude-in-chrome__*",
      "mcp__21st-dev-magic__21st_magic_component_builder"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf *)",
      "Bash(sudo rm:*)",
      "Bash(chmod 777:*)",
      "Bash(dd if=:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(vercel --prod:*)",
      "Bash(npm publish:*)",
      "Bash(supabase db reset:*)",
      "mcp__rube__*STRIPE*",
      "mcp__rube__*RESEND*",
      "mcp__rube__*EMAIL*SEND*"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "slack",
    "rube"
  ],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/speak.sh 'Ready to build' &"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/speak.sh 'Question on screen' &"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/speak.sh 'Task complete' &"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/speak.sh 'Context getting full. Creating handoff now.' &"
          }
        ]
      }
    ]
  }
}
